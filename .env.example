# RestakeLP Hook AVS - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# RPC ENDPOINTS
# =============================================================================

# Ethereum Mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Ethereum Sepolia Testnet
TESTNET_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Local Anvil (for development)
ANVIL_RPC_URL=http://localhost:8545

# =============================================================================
# BLOCK EXPLORER API KEYS
# =============================================================================

# Etherscan (Ethereum Mainnet & Sepolia)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# EIGENLAYER CONFIGURATION
# =============================================================================

# EigenLayer RPC URL
EIGENLAYER_RPC_URL=https://eigenlayer.xyz

# EigenLayer Private Key (for AVS operations)
EIGENLAYER_PRIVATE_KEY=your_eigenlayer_private_key_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployer Private Key (for contract deployment)
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# Owner Address (will be set as contract owner)
OWNER_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# PROTOCOL CONFIGURATION
# =============================================================================

# Default Protocol Fee (in basis points, e.g., 100 = 1%)
DEFAULT_PROTOCOL_FEE=100

# Maximum Protocol Fee (in basis points, e.g., 500 = 5%)
MAX_PROTOCOL_FEE=500

# Minimum Liquidity Amount (in wei)
MIN_LIQUIDITY_AMOUNT=1000000000000000000

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit your .env file to version control
# 2. Keep your private keys secure and never share them
# 3. Use different keys for different networks
# 4. Regularly rotate your API keys
